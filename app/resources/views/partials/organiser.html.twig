<li class="w-1/2 md:w-full lg:w-1/2 mb-4 relative flex-none flex items-center" style="min-height: 50px">
    <div class="pl-16">
        <div class="mb-1 text-sm">
            {% if organiser.websiteUrl %}
                <a href="{{ organiser.websiteUrl }}">{{ organiser.name }}</a>
            {% else %}
                {{ organiser.name }}
            {% endif %}
        </div>

        <div class="flex">
            {% if organiser.twitterHandle %}
                <a href="https://twitter.com/{{ organiser.twitterHandle }}" class="text-sm mr-1">
                    <i class="fa fa-twitter"></i>
                </a>
            {% endif %}

            {% if organiser.githubHandle %}
                <a href="https://github.com/{{ organiser.githubHandle }}" class="text-sm mr-1">
                    <i class="fa fa-github"></i>
                </a>
            {% endif %}

            {% if organiser.websiteUrl %}
                <a href="{{ organiser.websiteUrl }}" class="text-sm mr-1">
                    <i class="fa fa-globe"></i>
                </a>
            {% endif %}
        </div>
    </div>

    <div class="rounded-full absolute pin-t pin-l overflow-hidden border border-solid border-grey-lighter transition">
        <div class="flex items-center">
            <img src="{{ organiser.photoUrl }}"
                 alt="{{ organiser.name }}"
                 height="50"
                 width="50"
                 class="bg-white rounded-full transition">
        </div>
     </div>
</li>

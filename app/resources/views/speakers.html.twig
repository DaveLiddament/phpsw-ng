{% extends "base.html.twig" %}

{% block title %}Speakers &middot; {{ parent() }}{% endblock %}

{% block content_top %}
    {% include "partials/hero.html.twig" with {
        image_url: '/build/static/images/hero/speakers.jpg',
    } %}
{% endblock %}

{% block content %}
    <h1 class="title">Speakers</h1>

    <div class="-mx-4 md:flex">
        <div class="content px-4 pb-6 md:w-2/3 md:pb-0">
            <h2 class="mb-4">Alumni</h2>

            <ul class="flex flex-wrap list-reset speakers">
                {% for speaker in speakers %}
                    <li class="text-center mb-4 w-1/4 sm:w-1/5 md:w-1/4 lg:w-1/5 xl:w-1/7">
                        <a href="{{ personUrl(speaker) }}" class="flex flex-col-reverse group">
                            <div class="block text-sm mt-2 px-2 group-hover:underline">
                                {{ speaker.name }}
                            </div>

                            <div class="w-4/5 mx-auto">
                                <div class="rounded-full bg-white hover:shadow-center flex items-center p-1 transition">
                                    <img src="{{ speaker.photoUrl }}" class="h-16 w-16 mx-auto rounded-full transition hover:w-4 hover:max-w-sm">
                                </div>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="px-4 md:w-1/3">
            {% include "partials/interested-speaking.html.twig" %}
        </div>
    </div>
{% endblock %}

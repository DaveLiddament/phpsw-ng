{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Event",
    "description": "This defines an event (meetup)",
    "type": "object",
    "properties": {
        "meetup-id": {
            "description": "The meetup ID",
            "type": "string"
        },
        "date": {
            "description": "Date of the event",
            "type": "string"
        },
        "start-time": {
            "description": "Start time of the event",
            "type": "string"
        },
        "end-time": {
            "description": "End time of the event",
            "type": "string"
        },
        "title": {
            "description": "Event's title",
            "type": "string"
        },
        "description": {
            "description": "Event's description",
            "type": "string"
        },
        "talks": {
            "description": "Talks",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "venue": {
            "description": "Event's location",
            "type": "string"
        },
        "pub": {
            "description": "Pub afterwards",
            "type": "string"
        },
        "organisers": {
            "description": "A list of the organisers",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "sponsors": {
            "description": "Event sponsors",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "joindin-url": {
            "description": "Link to the joind.in event",
            "type": "string"
        }
    },
    "required": ["date", "title"]
}
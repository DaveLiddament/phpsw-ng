{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Website",
  "description": "This defines the elements of our website",
  "type": "object",
  "properties": {
    "introduction": {
      "description": "Introduction on the home page",
      "type": "string"
    },
    "organisers": {
      "description": "A list of the PHPSW organisers",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "photo-url": {
      "description": "Link to the home page photo",
      "type": "string"
    }
  },
  "required": ["title", "abstract", "speakers"]
}
